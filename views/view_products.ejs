<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("partials/user_head.ejs") %>
    <title>all products</title>
  </head>
  <body>
    <header>
      <!-- Navigation -->
      <%- include("partials/user_search_navbar.ejs") %>
      <%- include("partials/user_navbar2.ejs") %>
    </header>
    <main>
      <!-- grid system -->
      <div class="container">
        <h1 style="text-align: center">Products</h1>

        <div class="row">
          <% if (results.length > 0) { %>
          <% results.forEach(item => { %>
          <div class="col s12 m6 l4">
            <div class="card">
              <br />
              <div class="card-image waves-effect waves-block waves-light">
                <img
                  class="activator card-img-top"
                  src="../../public/uploads/<%= item.image  %>"
                />
              </div>
              <div class="card-content">
                <span class="card-title activator grey-text text-darken-4"
                  ><%= item.product_name %><i class="material-icons right"
                    >more_vert</i
                  ></span
                >
                <p><a href="/cart/<%= item.id %>">Buy Now</a></p>
              </div>
              <div class="card-reveal">
                <span class="card-title grey-text text-darken-4"
                  ><%= item.product_name %><i class="material-icons right"
                    >close</i
                  ></span
                >
                <p><%= item.description %></p>
              </div>
            </div>
          </div>
          <% }) %>
          <% } else { %>
            <li>No products found.</li>
        <% } %>
        </div>
      </div>
    </main>
    <!-- footer -->
    <%- include("partials/admin_footer.ejs") %>
  </body>

  <!-- jquery -->
  <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
  <!-- Compiled and minified JavaScript -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>

  <script src="../public/js/script.js"></script>
</html>
